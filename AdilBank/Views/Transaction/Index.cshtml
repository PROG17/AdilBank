@model AdilBank.Repositories.BankRepository

<table>
    <tr>
        <th>
            Konto
        </th>
        <th>
            Saldo
        </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var account in Model.Accounts)
    {
        <form asp-controller="Transaction" asp-action="Index" method="post">
            <tr>
                <td><input type="hidden" name="accountName" value="@account.Name" />@account.Name</td>
                <td><input type="hidden" name="accountBalance" value="@account.Balance" />@account.Balance</td>
                <td><input type="text" name="amount" /></td>
                <td><input type="submit" class="btn btn-default" value="Uttag" name="transactionType" /></td>
                <td><input type="submit" class="btn btn-success" value="Insättning" name="transactionType" /></td>
                <td></td>
            </tr>
        </form>
    }
</table>
<h4>@ViewBag.Message</h4>


<style>
    table {
         font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
         border-collapse: collapse;
         width: 100%;
     }

    td, th {
        border: 1px solid #ddd;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #ddd;
    }

    th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #4CAF50;
        color: white;
    }
</style>